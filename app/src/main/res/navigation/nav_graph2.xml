<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph2"
    app:startDestination="@id/First2Fragment">

    <fragment
        android:id="@+id/First2Fragment"
        android:name="com.istea.criptic.SignInFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first2">

        <action
            android:id="@+id/action_First2Fragment_to_Second2Fragment"
            app:destination="@id/main" />
        <action
            android:id="@+id/action_log_in_redirect"
            app:destination="@id/login" />
    </fragment>
    <activity
        android:id="@+id/main"
        android:name="com.istea.criptic.MainActivity"/>
    <activity
        android:id="@+id/login"
        android:name="com.istea.criptic.ui.login.LoginActivity"/>
</navigation>